<div class="col-md-6">
 <div class="panel panel-default">
  <div class="panel-heading">新增职位</div>
  <div class="panel-body">

<%= simple_form_for @job do |f| %>

<%= f.input :title %>
<%= f.input :description %>
<%= f.input :wage_lower_bound, :label => "薪资下限" %>
<%= f.input :wage_upper_bound, :label => "薪资上限" %>
<%= f.input :contact_email %>
<%= f.input :is_hidden %>
  <%= f.submit "Submit" %>
<% end %>
  </div>
 </div>
</div>
